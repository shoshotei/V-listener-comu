<div class="container px-5 px-sm-0">
  <div class='row'>
  <div class="col-md-3">
  <%= render 'form', submission: @submission, end_user: current_end_user %>
  </div>

  <div class="col-md-8 offset-md-1">
  <h2>投稿一覧</h2>

  <table class="table table-hover table-inverse">

    <tbody>
     <% @submissions.each do |submission| %>
     <tr>
      <td>
        <%= link_to submission_path(submission.id) do %>
         <%= image_tag submission.get_image %>
        <% end %>

        <%= link_to @end_user.name, end_user_path %>
      </td>
      <td><%= submission.body %></td>
     </tr>
     <% end %>
    </tbody>

  </table>
  </div>
 </div>
</div>