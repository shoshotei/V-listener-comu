<div class="container px-5 px-sm-0">
 <div class="row">
   <div class="col-md-3">

   <%= render 'end_user/submissions/form', submission: @submission, end_user: @end_user %>
   </div>
  <div class="col-md-8 offset-md-1">
  <h2><%= @end_user.name %>　の投稿一覧</h2>

  <% if @end_user == current_end_user %>
    <%= link_to "いいね一覧", favorites_end_user_path(@end_user.id),  class:"btn btn-success btn-sm" %>
  <% end %>

  <table class="table table-hover table-inverse">
    <tbody>
      <% @submissions.each do |submission| %>
      <tr>
      <td>
        <%= link_to submission_path(submission.id) do %>
         <%= image_tag submission.get_image(100, 100) %>
        <% end %>
      </td>
      <td><%= submission.body %></td>
     </tr>
      <% end %>

    </tbody>
  </table>
  </div>
 </div>
</div>