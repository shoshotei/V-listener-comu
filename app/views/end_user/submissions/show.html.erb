<div class="container">
  <div class="row">
    <div class="col-md-3">
     <%= render 'form', submission: @newsubmission, end_user: @end_user %>
    </div>
     <div class="col-md-8 offset-md-1">
       <h2>投稿詳細</h2>
       <table class="table">
         <tbody>
           <tr>

             <td>
               <%= link_to @end_user.name, end_user_path(@end_user) %>
             </td>
             <td>
                 <%= link_to @book.title, book_path %>
            </td>
             <td><%= @book.body %></td>
             <td>
              <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success btn-sm" %>
              <% end %>
             </td>
             <td>
              <% if @book.user == current_user %>
               <%= link_to "Destroy", book_path(@book.id), class:"btn btn-danger btn-sm", method: :delete, "data-confirm" => "本当に消しますか？" %>
              <% end %>
             </td>
           </tr>
         </tbody>
       </table>
     </div>
  </div>
</div>