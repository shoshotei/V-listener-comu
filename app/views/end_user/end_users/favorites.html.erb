<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">

   <%= render 'end_user/submissions/form', submission: @submission, end_user: @end_user %>
   </div>
  <div class="col-md-8 offset-md-1">

    <h2>いいね一覧</h2>
    <table class="table table-hover table-inverse">
      <tbody>
    <% @favorites.each do |favorite| %>
    <tr>
      <td>
        <%= link_to submission_path(favorite.submission.id) do %>
         <%= image_tag favorite.submission.get_image(100, 100) %>
        <% end %>

        <%= link_to favorite.submission.end_user.name, end_user_path(favorite.submission.end_user) %>
      </td>
      <td><%= favorite.submission.body %></td>
      <td>
        <% favorite.submission.tags.each do |tag| %>
         <%= tag.name %>
        <% end %>
      </td>
    </tr>
    <% end %>
      </tbody>
    </table>
  </div>
 </div>
</div>