 <div class="container">
   <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>ユーザー編集</h2>

       <%= form_with model: @end_user do |f| %>

       <div class="form-group">
        <label for="inputName">名前</label></br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %></br>
       </div>

       <div class="form-group">
        <label for="inputImage">プロフィール画像</label></br>
        <%= f.file_field :profile_image, accept: "image/*" %></br>
       </div>

       <div class="form-group">
        <label for="inputIntroduction">自己紹介文</label></br>
        <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"自己紹介文" %>
       </div>

        <%= f.submit "変更内容を保存", class:"btn btn-success btn-sm" %>
       <% end %>
     </div>
   </div>
 </div>